<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoPlayActivity"
    android:background="#000"
    >

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/chat_video_exo_player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/chat_send_video_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ok"
        android:contentDescription="@string/todo"
        android:background="@android:color/transparent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/before_chat_video_download_image_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:contentDescription="@string/todo"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />

    <is.arontibo.library.ElasticDownloadView
        android:id="@+id/chat_video_download_or_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>