<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_user_offline_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/vadim"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/chat_user_offline_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@android:color/black"
            android:paddingLeft="15sp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:paddingStart="15sp"
            tools:ignore="RtlSymmetry"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/chat_user_offline_last_seen_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_user_offline_name"
            android:text="Request Sent"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:paddingTop="3dp"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:ignore="RtlSymmetry"
            android:visibility="invisible"
            />

    </RelativeLayout>


</LinearLayout>