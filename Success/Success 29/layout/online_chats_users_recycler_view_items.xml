<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/online_user_chat_friend_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/vadim"
            android:padding="5dp"
            android:visibility="invisible"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/online_user_chat_online_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/online"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="48dp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/online_chat_user_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/online_user_chat_friend_image"
            android:text="Username"
            android:layout_marginLeft="10dp"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:visibility="invisible"
            />

    </RelativeLayout>

</LinearLayout>