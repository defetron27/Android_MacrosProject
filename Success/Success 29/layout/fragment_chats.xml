<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deffe.macros.soulsspot.ChatsFragment">


    <TextView
        android:id="@+id/active_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online"
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/online_friends"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/active_now"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/not_active_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offline"
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/online_friends"
        android:paddingStart="20dp"
        tools:ignore="RtlSymmetry" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/offline_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/not_active_now"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>
