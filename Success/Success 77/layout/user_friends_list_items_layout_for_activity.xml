<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_friend_list_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/vadim"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp" />

        <CheckBox
            android:id="@+id/select_user_to_add_to_group_check_box"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:layout_alignEnd="@id/user_friend_list_image"
            android:layout_alignRight="@id/user_friend_list_image"
            android:layout_marginTop="50dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/user_friend_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@android:color/black"
            android:paddingLeft="15sp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:paddingStart="15sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/user_friend_list_since_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_friend_list_name"
            android:text="Since"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:ignore="RtlSymmetry" />

    </RelativeLayout>

</LinearLayout>