<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/all_users_invite_profile_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/vadim"
        android:background="@drawable/circle"
        android:padding="18dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/all_users_invite_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_users_invite_profile_img"
        android:text="Username"
        android:textSize="23sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/all_users_invite_profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_users_invite_profile_name"
        android:text="Status"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:maxLines="50"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:layout_marginEnd="60dp" />


</RelativeLayout>