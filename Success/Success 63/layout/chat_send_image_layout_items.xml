<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_incoming_image_profile_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:orientation="vertical"
        android:background="#ffffffff"
        >



        <ImageView
            android:id="@+id/online_received_image_image_view"
            android:layout_width="280dp"
            android:layout_height="190dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/vadim"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/online_received_image_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#000"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="3dp"
        android:text="9:45 am"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_shape_outgoing_message"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:layout_gravity="end"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/online_send_image_image_view"
            android:layout_width="280dp"
            android:layout_height="190dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/online_send_image_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#000"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            />

    </LinearLayout>


</LinearLayout>