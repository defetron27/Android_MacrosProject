<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="7dp"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/video_post_user_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/vadim"
            android:layout_margin="6dp"
            />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/video_post_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Username"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/video_post_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uploaded time"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" />


        </LinearLayout>


        <ImageButton
            android:id="@+id/video_post_remove_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_details"
            android:contentDescription="@string/todo"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="6dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/video_thumb_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@android:color/black"
            android:contentDescription="@string/todo"
            />

        <ImageView
            android:id="@+id/video_play_button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/play_video"
            android:contentDescription="@string/todo"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/download_video_with_size"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_file_download"
            android:drawableStart="@drawable/ic_file_download"
            android:background="@drawable/download_bg"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:layout_centerInParent="true"
            android:textSize="13sp"
            android:textColor="#fff"
            android:gravity="center"
            android:visibility="gone"
            />

    </RelativeLayout>


    <TextView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
