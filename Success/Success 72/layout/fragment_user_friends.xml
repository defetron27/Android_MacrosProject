<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:id="@+id/friends_fragment">



    <TextView
        android:id="@+id/you_have_no_friends"
        android:layout_height="75dp"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/edittext_background"
        android:textSize="18sp"
        android:text="You have no friends\n  Tap 'Add Friends'\n to add friends"
        android:textColor="#000"
        android:textStyle="italic"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_friend_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/friends_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_friends"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>