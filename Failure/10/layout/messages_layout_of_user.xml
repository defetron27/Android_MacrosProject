<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_sender_profile_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/vadim"
        />


    <TextView
        android:id="@+id/message_sender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_incoming_message"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        />

    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/todo"
        android:src="@drawable/vadim"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/message_receiver_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_outcoming_message"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="start"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/todo"
        android:src="@drawable/vadim"
        android:background="@drawable/shape_outcoming_message"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="gone"
        />


</RelativeLayout>